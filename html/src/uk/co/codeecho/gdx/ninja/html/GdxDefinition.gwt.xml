<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit trunk//EN" "http://google-web-toolkit.googlecode.com/svn/trunk/distro-source/core/src/gwt-module.dtd">
<module rename-to="html">
	<inherits name='com.badlogic.gdx.backends.gdx_backends_gwt' />
        
        <inherits name='com.badlogic.gdx.physics.box2d.box2d-gwt' />
        
        <inherits name='libgdx-utils' />
        <inherits name='libgdx-utils-box2d' />

	<inherits name='GdxForgeCore' />

        <extend-configuration-property name="gdx.reflect.include" value="uk.co.codeecho.gdx.forge.screen.event" />       
        <extend-configuration-property name="gdx.reflect.include" value="uk.co.codeecho.gdx.forge.box2d.collision.event" />       
        <extend-configuration-property name="gdx.reflect.include" value="uk.co.codeecho.gdx.forge.input" /> 
        <extend-configuration-property name="gdx.reflect.include" value="uk.co.codeecho.gdx.forge.library" /> 
        <extend-configuration-property name="gdx.reflect.include" value="uk.co.codeecho.gdx.ninja" />

	<entry-point class='uk.co.codeecho.gdx.ninja.client.HtmlLauncher' />
	
	<set-configuration-property name="gdx.assetpath" value="../assets/" />
</module>
